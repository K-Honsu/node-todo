<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        .container {
            background-color: white;
            border: 1px solid #ccc;
            padding: 20px;
            border-radius: 5px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        .styled-form {
            display: flex;
            flex-direction: column;
        }

        .form-label {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .form-input {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 3px;
            margin-bottom: 10px;
        }

        .form-button {
            background-color: #3b82f6;
            color: white;
            padding: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
            font-weight: bold;
        }

        .form-button:hover {
            background-color: #2563eb;
        }

    </style>
</head>
<body>
    <header>
        <%- include('./partials/header'); %>
    </header>
    <div style="padding:20px;margin-top:30px;height:1500px;">
        <h2>Reset-Password</h2>
        <div class="container">
            <% if (message) { %>
                <div class="success-message">
                    <p><%= message %></p>
                </div>
            <% } %>
            <form class="styled-form" action="/views/resetPassword/<%= user_id %>/<%= token %>"  method="post">
                <label for="new-password" class="form-label">New Password:</label>
                <input type="password" name="newpassword" id="newpassword" class="form-input">
                
                <label for="re-password" class="form-label">Re password:</label>
                <input type="password" name="confirmpassword" id="confirmpassword" class="form-input">
                
                <input type="submit" value="Submit" class="form-button">
            </form>
        </div>
    </div>
   
</body>
</html>